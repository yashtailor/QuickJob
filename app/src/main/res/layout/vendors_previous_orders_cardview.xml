<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/interesting_stuff"
        android:padding="5dp"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNamePreviousOrderVendor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="User Name:"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishTimePreviousOrderVendor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/userNamePreviousOrderVendor"
            android:text="Time:"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_delete"
            android:id="@+id/deleteItemPreviousOrderVendor"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>