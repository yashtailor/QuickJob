<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradients_orange"
    tools:context=".payments">

    <EditText
        android:id="@+id/moneyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the cash value"
        android:background="@drawable/interesting_stuff"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="10dp"
         />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:background="@drawable/interesting_stuff"
        android:layout_below="@+id/moneyValue"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp"/>
</RelativeLayout>